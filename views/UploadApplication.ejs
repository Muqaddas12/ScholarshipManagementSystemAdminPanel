<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>File Upload</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 min-h-screen flex flex-col">

  <!-- Navbar -->
  <nav class="border-gray-200 bg-gray-50 dark:bg-gray-800 dark:border-gray-700">
    <div class="max-w-screen-xl flex flex-wrap items-center justify-between mx-auto p-4">
      <a href="#" class="flex items-center space-x-3 rtl:space-x-reverse">
        <img src="https://flowbite.com/docs/images/logo.svg" class="h-8" alt="Flowbite Logo" />
        <span class="self-center text-2xl font-semibold whitespace-nowrap dark:text-white">Sugsms</span>
      </a>
    </div>
  </nav>

  <!-- Main Content Wrapper -->
  <div class="flex flex-grow">

    <!-- Sidebar -->
    <div class="w-64 bg-gray-800 text-white p-4">
      <ul>
        <li class="mb-2 hover:bg-gray-700 p-2 rounded cursor-pointer">
          <a href="/admin/homepage" class="block">Dashboard</a>
        </li>
        <li class="mb-2 hover:bg-gray-700 p-2 rounded cursor-pointer">
          <a href="/admin/applications" class="block">Applications</a>
        </li>
        <li class="mb-2 hover:bg-gray-700 p-2 rounded cursor-pointer">
          <a href="/admin/upload" class="block">Upload</a>
        </li>
        <li class="mb-2 hover:bg-gray-700 p-2 rounded cursor-pointer">
          <a href="/admin/logout" class="block">Logout</a>
        </li>
      </ul>
    </div>

    <!-- Main Form Content -->
    <div class="flex-grow bg-gray-100 p-6">
      <h1 class="text-2xl font-bold mb-6 text-center">Upload a PDF</h1>

      <!-- Upload Form -->
      <form action="/admin/upload" method="POST" enctype="multipart/form-data" class="space-y-6">
        <!-- Student Name -->
        <div>
          <label for="studentName" class="block text-gray-700 font-medium">Name of Student:</label>
          <input type="text" id="studentName" name="studentName" required
                 class="w-full px-4 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"/>
        </div>

        <!-- Roll Number -->
        <div>
          <label for="rollNumber" class="block text-gray-700 font-medium">Roll Number:</label>
          <input type="text" id="rollNumber" name="rollNumber" required
                 class="w-full px-4 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"/>
        </div>

        <!-- Graduation Year -->
        <div>
          <label for="graduationYear" class="block text-gray-700 font-medium">Graduation Year:</label>
          <input type="number" id="graduationYear" name="graduationYear" required
                 class="w-full px-4 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"/>
        </div>

        <!-- Department -->
        <div>
          <label for="department" class="block text-gray-700 font-medium">Department:</label>
          <input type="text" id="department" name="department" required
                 class="w-full px-4 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"/>
        </div>

        <!-- Course -->
        <div>
          <label for="course" class="block text-gray-700 font-medium">Course:</label>
          <input type="text" id="course" name="course" required
                 class="w-full px-4 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"/>
        </div>

        <!-- File Upload -->
        <div>
          <label for="pdfFile" class="block text-gray-700 font-medium">Choose a PDF:</label>
          <input type="file" id="pdfFile" name="pdfFile" accept="application/pdf" required
                 class="w-full text-gray-700"/>
        </div>

        <!-- Submit Button -->
        <button type="submit" class="w-full bg-blue-600 text-white py-2 px-4 rounded hover:bg-blue-700 transition">
          Upload
        </button>
      </form>
    </div>
    
  </div>

</body>
</html>
